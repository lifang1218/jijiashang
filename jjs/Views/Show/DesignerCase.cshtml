@using jjs.Models;
@model jjs.Models.LayoutViewModel

@{
    ViewBag.Title = @ViewBag.Title;
    Layout = "~/Views/Show/Index.cshtml";
}


<div class="lfbj">
    <div class="sjsnr">
        <table width="860" height="400" border="0" cellpadding="0" cellspacing="0">
            @foreach (var item in Model.designers)
            {
                <tbody>
                    <tr>
                        <td width="305" rowspan="2" align="center" valign="middle">
                            <div align="center">
                                <img src=@item.DPhoto width="305" height="400" border="0" alt=@item.DName>
                            </div>
                        </td>
                        <td width="555" height="85" style="font-size:26px; font-family:'微软雅黑'; color:#FFFFFF; font-weight:bolder;">
                            &nbsp;&nbsp;&nbsp;&nbsp;设计师：@item.DName
                        </td>
                    </tr>
                    <tr>
                        <td height="315" align="left" valign="top">
                            <div style="margin-left:30px; margin-top:5px; margin-right:20px; line-height:26px; font-family:'微软雅黑'; color:#FFFFFF; font-size:14px;">
                                毕业院校： @item.DUniversity;<br>
                                所属部门：@item.DDepartment; <br>
                                设计作品：@ViewBag.CaseNameList<br>
                                设计理念：@item.DIdea; <br>
                            </div>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
    <div style="clear:both"></div>
    <div class="sjsqt">
        <div class="sjsqta">
            <table width="860" border="0" cellspacing="0" cellpadding="0">
                <tbody>
                    <tr>
                        <td width="222" height="60" align="left" valign="middle"><span style="font-size:30px; font-family:'微软雅黑';color:#444444; font-weight:bolder;">该设计师</span><span style="font-size:30px; font-family:'微软雅黑';color:#12B5B0; font-weight:bolder;">的案例</span></td>
                        <td width="638" align="left" valign="top"><div style="font-size:14px; font-family:'微软雅黑';color:#575757; margin-top:25px; font-weight:bolder;">真实的家装案例，给你真实的家装效果体验，设计家的感觉不再愁</div></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="sjsqtb">

            @foreach (var item in Model.classicCase)
            {
                string href = "/Show/ArticleContent?id=" + item.Id;
                <div class="sjsqtlb">
                    <table width="275" height="235" border="0" cellpadding="0" cellspacing="0">
                        <tbody>
                            <tr>
                                <td height="195" align="center" valign="middle">
                                    <a href=@href>
                                        <img src=@item.ACPhoto width="275" height="195" border="0">
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td height="40" align="center" valign="middle">
                                    <div class="gengduo">
                                        <a href=@href>@item.ACTitle</a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>