@using jjs.Models;
@model jjs.Models.LayoutViewModel

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<div style="width: 100%; height: 300px; margin-left: auto; margin-right: auto; background-image: url(../source/img/xp01.jpg); background-repeat: no-repeat; background-position: 50% 0;"></div>
<div class="fybd">
    <div class="fybdbj">
        <div class="lf">
            <div class="lfbj">
                @RenderBody()
            </div>
        </div>
        <div class="rg">
            <div class="bm">
                <div class="bm1">
                    <span style="font-size: 18px; font-family: 'Microsoft YaHei'; font-weight: bolder">申请免费量房</span><br />
                    <span style="font-size: 14px; font-family: &#39; 微软雅黑&#39;">快速提交3分钟电话回访</span>
                </div>
                <div class="bm2">
                    <script>
                        function success() {
                            $('#Name').val('');
                            $('#Phone').val('');
                            $('#Address').val('');
                        }
                    </script>

                    @using (Ajax.BeginForm("MessageCreate", "Show", null, new AjaxOptions()
                    {

                        HttpMethod = "Post",
                        OnSuccess = "success",
                        UpdateTargetId = "divsuccess",
                        InsertionMode = InsertionMode.Replace,
                        LoadingElementId = "loading"
                    }))
                    {
                        <table width="250" height="240" border="0" cellpadding="0" cellspacing="0">
                            <tbody>
                                <tr>
                                    <td height="20">&nbsp;</td>
                                </tr>
                                <tr>
                                    <td height="50" align="left" valign="middle">
                                        @Html.TextBox("Name", "", new { @size = "39", @style = "height: 34px; border: 1px #d0d0d0 solid;", @placeholder = "您的姓名" })
                                        @Html.ValidationMessageFor(model => Model.message.Name)
                                    </td>
                                </tr>
                                <tr>
                                    <td height="50" align="left" valign="middle">
                                        @Html.TextBox("Phone", "", new { @size = "39", @style = "height: 34px; border: 1px #d0d0d0 solid;", @placeholder = "您的电话" })
                                        @Html.ValidationMessageFor(model => Model.message.Phone)
                                    </td>
                                </tr>
                                <tr>
                                    <td height="50" align="left" valign="middle">
                                        @Html.TextBox("Address", "", new { @size = "39", @style = "height: 34px; border: 1px #d0d0d0 solid;", @placeholder = "您的地址" })
                                        @Html.ValidationMessageFor(model => Model.message.Address)
                                    </td>
                                </tr>
                                <tr>
                                    <td height="50" align="left" valign="middle">
                                        <input type="image" src="../source/img/sy37.jpg" />
                                    </td>
                                </tr>
                                <tr>
                                    <td height="20">
                                        <div id="loading" style="display:none">
                                            <img style="vertical-align:middle" src="~/source/img/loading.gif" />正在获取中，请稍候...
                                        </div>
                                        <div id="divsuccess" style="color:red;">

                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>

            </div>
            <div class="tzxq">
                <div class="tzxq1">
                    <table width="260" height="50" border="0" cellpadding="0" cellspacing="0">
                        <tbody>
                            <tr>
                                <td width="212" style="font-size: 18px; font-family: 'Microsoft YaHei'; font-weight: bolder">团装小区</td>
                                <td width="48" align="left" valign="middle"><a href="#">MORE&gt;&gt;</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                @if (Model.groupBuilds != null && Model.groupBuilds.Count() > 0)
                {
                    foreach (var item in Model.groupBuilds)
                    {
                        string linkstr = "/Show/ArticleContent?id=" + item.Id;
                        <div class="tzxq2">
                            <table width="250" height="75" border="0" cellpadding="0" cellspacing="0">
                                <tbody>
                                    <tr>
                                        <td width="120" rowspan="2" align="left" valign="middle">
                                            <img src=@item.ACPhoto width="115" height="75" />
                                        </td>
                                        <td width="130" height="30"><a href=@linkstr>@item.ACTitle</a></td>
                                    </tr>
                                    <tr>
                                        <td height="45" align="left" valign="top">
                                            <div style="line-height: 20px;">@item.ACEpitome</div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                }
            </div>
            <div class="fygg">
                <img src="../source/img/xq02.jpg" />
            </div>
            <div class="fygg">
                <img src="../source/img/xq03.jpg" />
            </div>
        </div>
        <div style="clear: both"></div>
    </div>
</div>