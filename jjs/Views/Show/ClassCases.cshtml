@using jjs.Models;
@model jjs.Models.LayoutViewModel
@{
    ViewBag.Title = "经典案例列表页";
    Layout = "~/Views/Show/Index.cshtml";
}

@foreach (var item in Model.classicCase)
{
    string href = "/Show/ArticleContent?id=" + item.Id;
    <div class="alk">
        <table width="280" height="270" border="0" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>
                    <td height="200" colspan="3" align="center" valign="middle">
                        <a href=@href>
                            <img src=@item.ACPhoto width="280" height="200" border="0">
                        </a>
                    </td>
                </tr>
                <tr>
                    <td height="40" colspan="3" align="left" valign="middle">
                        <div class="gengduo">
                            &nbsp;
                            <a href=@href>@item.ACTitle</a>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td width="280" height="25" align="left" valign="top" colspan="3">@item.ACEpitome</td>
                </tr>

            </tbody>
        </table>
    </div>

}