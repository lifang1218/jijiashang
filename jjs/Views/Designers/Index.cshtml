@model IEnumerable<jjs.Models.Designer>

@{
    ViewBag.Title = "设计师列表页";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>设计师列表页</h2>

<p>
    @Html.ActionLink("新建", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DUniversity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DIdea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DDepartment)
        </th>
        <th>
            排序
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InDateTime)
        </th>

        <th>操作</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td width="10%">
                <img src=@item.DPhoto style="width:100px;height:100px;" />
                <p>
                    <b> @Html.DisplayFor(modelItem => item.DName)</b>
                </p>
            </td>
            <td width="10%" style="vertical-align:middle;">
                @Html.DisplayFor(modelItem => item.DUniversity)
            </td>
            <td width="35%">
                @Html.DisplayFor(modelItem => item.DIdea)
            </td>
            <td width="10%"  style="vertical-align:middle;">
                @Html.DisplayFor(modelItem => item.DDepartment)
            </td>
            <td width="5%"  style="vertical-align:middle;">
                @Html.DisplayFor(modelItem => item.DSortNum)
            </td>
            <td width="15%"  style="vertical-align:middle;">
                @Html.DisplayFor(modelItem => item.InDateTime)
            </td>
            <td width="15%">
                @Html.ActionLink("编辑", "Edit", new { id = item.Id }) |
                @Html.ActionLink("查看详情", "Details", new { id = item.Id }) |
                @Html.ActionLink("删除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
